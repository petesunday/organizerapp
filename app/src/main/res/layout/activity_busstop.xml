<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusStop">


    <TextView
        android:id="@+id/nazwa_przystanku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="park naukowo technologiczny 03"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textAllCaps="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_bus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nazwa_przystanku"/>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_items"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/searchBarPlaceholderColor"
        app:itemTextColor="@color/searchBarPlaceholderColor"/>

</RelativeLayout>